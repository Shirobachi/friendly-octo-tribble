<% if team.errors.any? %>
	<div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
		<p class="font-bold">Something went wrong!</p>
			<% team.errors.each do |error| %>
				<p class="text-sm">
					<%= error.full_message %>
				</p>
			<% end %>
		</div>
	</div>
<% end %>

<%= form_with(model: team) do |form| %>
	
	<div class="mt-5 flex flex-col space-y-4">
		<div>
			<%= form.text_field :name, class: "neon-green", placeholder: "Team's name" %>
		</div>

		<div>
			<%= form.text_field :linkToPhoto, class: "neon-green", placeholder: "Link to photo" %>
		</div>

		<div>
			<%= form.number_field :quantity, class: "neon-green", placeholder: "Quantity" %>
		</div>

		<div>
			<%= form.submit class: "neon neon-green" %>
		</div>
	</div>

<% end %>
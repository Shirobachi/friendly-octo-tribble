<p class="text-3xl mt-5"><%= t('menu.scoreboard.teams')%></p>

<%# TABLE %>
<% if @teams.count == 0 %>
	<p class="text-center mt-5 underline"><%= t("menu.scoreboard.no_team") %></p>
<% else %>
	<div class="md:px-32 py-8 w-full">
		<div class="shadow overflow-hidden rounded border-b border-gray-200">
			<table class="min-w-full bg-white">
				<thead class="bg-gray-800 text-white">
					<tr>
						<th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">#</th>
						<th class="text-left py-3 px-4 uppercase font-semibold text-sm"><%= t('menu.scoreboard.name')%></th>
						<th class="text-left py-3 px-4 uppercase font-semibold text-sm"><%= t('menu.scoreboard.best_score')%></td>
						<th class="text-left py-3 px-4 uppercase font-semibold text-sm"><%= t('menu.scoreboard.link_to_photo')%></td>
						<th class="text-left py-3 px-4 uppercase font-semibold text-sm"><%= t('menu.scoreboard.quatity')%></td>
						<th class="text-left py-3 px-4 uppercase font-semibold text-sm"><%= t('menu.scoreboard.action')%></td>
					</tr>
				</thead>
			<tbody class="text-gray-700">

				<% @teams.each do |t| %>
					<tr>
						<%# ID %>
						<td class="w-1/3 text-left py-3 px-4"><%= t.id%></td>
						<%# NAME %>
						<td class="w-1/3 text-left py-3 px-4"><%= t.name%></td>
						<%# BESTSCORE %>
						<td class="w-1/3 text-left py-3 px-4"> 
							<% if t.bestScore == -1 %>
								<%= t('menu.scoreboard.no_score') %>
							<% else %>
								<%= t.bestScore %>
							<% end %>
						</td>
						<%# PHOTO LINK %>
						<td class="w-1/3 text-left py-3 px-4">
							<% if t.linkToPhoto.present? %>
								<%= link_to t.linkToPhoto, t.linkToPhoto, class: 'text-blue-500 underline', target: '_blank' %>
							<% else %>
								<%= t('menu.scoreboard.no_photo') %>
							<% end %>
						</td>
						<%# QUANTITY %>
						<td class="w-1/3 text-left py-3 px-4"> <%= t.quantity%> </td>
						<%# ACTIONS %>
						<td class="text-left py-3 px-4">
							<div class="flex space-x-2">

							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
			</table>
		</div>
	</div>
<% end %>

	<div class="flex justify-center items-center mb-8 space-x-5">
		<%= link_to t('menu.scoreboard.new'), new_team_path, class: "neon neon-green"%>
		<%= link_to t('back.toMenu'), menu_path, class: "neon neon-gray"%>
	</div>

<% if game.errors.any? %>
	<div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
		<p class="font-bold"><%= t('toast.wrong')%></p>
			<% game.errors.each do |error| %>
				<p class="text-sm">
					<%= error.full_message %>
				</p>
			<% end %>
		</div>
	</div>
<% end %>

<%= form_with(model: game) do |form| %>
	
	<div class="mt-5 flex flex-col space-y-4">
		<div class="flex justify-center translate-x-5 items-center">
			<%= form.text_field :name, class: "neon-green", placeholder: t('placeholders.name') + ' - ' + t('shared.optional') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.name') + ' - ' + t('shared.optional') } %>
			</div>
		</div>

		<div>
			<%= form.submit t('game.confirm'), class: "neon neon-green" %>
		</div>
	</div>

<% end %>

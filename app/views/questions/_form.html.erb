<% if question.errors.any? %>
	<div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
		<p class="font-bold"><%= t('toast.wrong')%></p>
			<% question.errors.each do |error| %>
				<p class="text-sm">
					<%= error.full_message %>
				</p>
			<% end %>
		</div>
	</div>
<% end %>

<%= form_with(model: question) do |form| %>
	<div class="mt-5 flex flex-col space-y-4">
		<div class="flex justify-center translate-x-5 items-center">
			<%= form.text_field :question, class: "neon-green req", placeholder: t('placeholders.questionContent') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.questionContent'), req: true } %>
			</div>
		</div>

		<div class="flex justify-center translate-x-5 items-center">
			<%= form.text_field :ansA, class: "neon-green",  placeholder: t('placeholders.ansa') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.ansa'), req: true } %>
			</div>
		</div>

		<div class="flex justify-center translate-x-5 items-center">
			<%= form.text_field :ansB, class: "neon-green", placeholder: t('placeholders.ansb') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.ansb'), req: true } %>
			</div>
		</div>

		<div class="flex justify-center translate-x-5 items-center">
			<%= form.text_field :ansC, class: "neon-green", placeholder: t('placeholders.ansc') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.ansc'), req: true } %>
			</div>
		</div>

		<div class="flex justify-center translate-x-5 items-center">
			<%= form.text_field :ansD, class: "neon-green", placeholder: t('placeholders.ansd') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.ansd'), req: true } %>
			</div>
		</div>

		<div class="flex justify-center translate-x-5 items-center">
			<%= form.number_field :points, class: "neon-green", placeholder: t('placeholders.score') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.score'), req: true } %>
			</div>
		</div>

		<div class="flex justify-center translate-x-5 items-center">
			<%= form.number_field :time, class: "neon-green", placeholder: t('placeholders.timeInSeconds') %>

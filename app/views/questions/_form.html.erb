<% if question.errors.any? %>
	<div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
		<p class="font-bold">Something went wrong!</p>
			<% question.errors.each do |error| %>
				<p class="text-sm">
					<%= error.full_message %>
				</p>
			<% end %>
		</div>
	</div>
<% end %>

<%= form_with(model: question) do |form| %>

	<div class="mt-5 flex flex-col space-y-4">
		<div>
			<%= form.text_field :question, class: "neon-green", placeholder: "Question content" %>
		</div>

		<div>
			<%= form.text_field :ansA, class: "neon-green",  placeholder: "Answer A (correct)" %>
		</div>

		<div>
			<%= form.text_field :ansB, class: "neon-green", placeholder: "Answer B" %>
		</div>

		<div>
			<%= form.text_field :ansC, class: "neon-green", placeholder: "Answer C" %>
		</div>

		<div>
			<%= form.text_field :ansD, class: "neon-green", placeholder: "Answer D" %>
		</div>

		<div>
			<%= form.number_field :points, class: "neon-green", placeholder: "Score" %>
		</div>

		<div>
			<%= form.number_field :time, class: "neon-green", placeholder: "Time in seconds" %>
		</div>

		<div>
			<%= form.text_field :justificationUrl, class: "neon-green", placeholder: "URL to source" %>
		</div>

		<div>
			<%= form.text_field :justification, class: "neon-green", placeholder: "Justification" %>
		</div>

		<div>
			<%= form.submit 'Confirm', class: "neon neon-green" %>
		</div>
	</div>

<% end %>

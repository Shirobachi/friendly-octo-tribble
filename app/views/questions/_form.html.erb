				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.timeInSeconds'), req: true } %>
			</div>
		</div>

		<div class='flex justify-center translate-x-5 items-center'>
			<%= form.text_field :justificationUrl, class: "neon-green", placeholder: t('placeholders.urlToJustification') + ' - ' + t('shared.optional') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.urlToJustification') + ' - ' + t('shared.optional') } %>
			</div>
		</div>

		<div class='flex justify-center translate-x-5 items-center'>
			<%= form.text_field :justification, class: "neon-green", placeholder: t('placeholders.justification') + ' - ' + t('shared.optional') %>
			<div class="m-3">
				<%= render :partial => 'shared/tooltip', locals: {m: t('placeholders.justification') + ' - ' + t('shared.optional') } %>
			</div>
		</div>

		<div>
			<%= form.submit t('game.confirm'), class: "neon neon-green" %>
		</div>
	</div>

<% end %>